<Window x:Class="RTSPVirtualCam.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        xmlns:vm="clr-namespace:RTSPVirtualCam.ViewModels"
        xmlns:helpers="clr-namespace:RTSPVirtualCam.Helpers"
        Title="ðŸŽ¥ RTSP VirtualCam" 
        Height="720" Width="1000"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2E">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        
        <!-- Fixed Dark Theme Styles -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="#89B4FA"/>
        </Style>
        
        <!-- ComboBox Toggle Button Template -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" Background="#313244" BorderBrush="#45475A" BorderThickness="1" CornerRadius="3"/>
                <Border Grid.Column="0" Background="#313244" BorderBrush="#45475A" BorderThickness="0" CornerRadius="3,0,0,3"/>
                <Path x:Name="Arrow" Grid.Column="1" Fill="#CDD6F4" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
            </Grid>
        </ControlTemplate>
        
        <!-- ComboBox TextBox Template -->
        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="Transparent"/>
        </ControlTemplate>
        
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" Template="{StaticResource ComboBoxToggleButton}"
                                          Grid.Column="2" Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"/>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="10,3,30,3" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#CDD6F4"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#313244" BorderBrush="#45475A" BorderThickness="1"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#313244"/>
                        <Setter Property="Foreground" Value="#CDD6F4"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="Border" Padding="{TemplateBinding Padding}" 
                                            Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#45475A"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#89B4FA"/>
                                            <Setter Property="Foreground" Value="#1E1E2E"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#89B4FA"/>
            <Setter Property="Foreground" Value="#1E1E2E"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#45475A"/>
                    <Setter Property="Foreground" Value="#6C7086"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#45475A"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#313244"/>
                    <Setter Property="Foreground" Value="#585B70"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#A6E3A1"/>
        </Style>
        
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F38BA8"/>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#BAC2DE"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <!-- Collapsible Section Style -->
        <Style x:Key="SectionExpander" TargetType="Expander">
            <Setter Property="Background" Value="#1E1E2E"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderBrush" Value="#313244"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <StackPanel>
                                <ToggleButton x:Name="HeaderSite" 
                                              IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              Background="#252536" 
                                              BorderThickness="0"
                                              Padding="12,10"
                                              HorizontalContentAlignment="Stretch"
                                              Cursor="Hand">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8,8,0,0" Padding="{TemplateBinding Padding}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ContentPresenter Grid.Column="0" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1" x:Name="Arrow" Text="â–¼" Foreground="#6C7086" FontSize="10" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="Arrow" Property="Text" Value="â–²"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                    <ContentPresenter Content="{TemplateBinding Header}" ContentTemplate="{TemplateBinding HeaderTemplate}"/>
                                </ToggleButton>
                                <Border x:Name="ExpandSite" Visibility="Collapsed" Padding="12,10">
                                    <ContentPresenter/>
                                </Border>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- PTZ Button Style -->
        <Style x:Key="PTZButton" TargetType="Button">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45475A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#89B4FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Control Button Style -->
        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#45475A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Toggle Button Style for Flip -->
        <Style x:Key="ToggleControlButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#45475A"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#89B4FA"/>
                                <Setter Property="Foreground" Value="#1E1E2E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel - Controls -->
        <Border Grid.Column="0" Background="#181825" Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="ðŸŽ¥ RTSP VirtualCam" FontSize="18" FontWeight="Bold" Foreground="#CDD6F4" Margin="0,0,0,2"/>
                    <TextBlock Text="CCTV to Webcam Converter" FontSize="10" Foreground="#6C7086" Margin="0,0,0,12"/>
                    
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- SECTION 1: CAMERA SETUP (Collapsible) -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <Expander Style="{StaticResource SectionExpander}" IsExpanded="False">
                        <Expander.Header>
                            <TextBlock Text="ðŸ“· CAMERA SETUP" Foreground="#F9E2AF" FontWeight="SemiBold" FontSize="11"/>
                        </Expander.Header>
                        <StackPanel>
                            <TextBlock Text="Brand" Style="{StaticResource LabelStyle}"/>
                            <ComboBox ItemsSource="{Binding Brands}" SelectedItem="{Binding SelectedBrand}" Style="{StaticResource ModernComboBox}" Margin="0,0,0,10"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/><ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="IP Address" FontSize="9" Foreground="#6C7086" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Port" FontSize="9" Foreground="#6C7086" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                    <TextBlock Text="Username" FontSize="9" Foreground="#6C7086" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                    <TextBlock Text="Password" FontSize="9" Foreground="#6C7086" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- PTZ Credentials (Optional) -->
                            <TextBlock Text="PTZ CONTROL (OPTIONAL)" FontSize="8" Foreground="#585B70" FontWeight="Bold" Margin="0,8,0,4"/>
                            <TextBlock Text="Solo si PTZ requiere credenciales diferentes" FontSize="8" Foreground="#585B70" Margin="0,0,0,6" TextWrapping="Wrap"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                    <TextBlock Text="PTZ Username" FontSize="9" Foreground="#6C7086" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding PtzUsername, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}" Foreground="#89B4FA"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                    <TextBlock Text="PTZ Password" FontSize="9" Foreground="#6C7086" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding PtzPassword, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}" Foreground="#89B4FA"/>
                                </StackPanel>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/><ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Stream" FontSize="9" Foreground="#6C7086" Margin="0,0,0,2"/>
                                    <ComboBox ItemsSource="{Binding Streams}" SelectedItem="{Binding SelectedStream}" Style="{StaticResource ModernComboBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Channel" FontSize="9" Foreground="#6C7086" Margin="0,0,0,2"/>
                                    <ComboBox ItemsSource="{Binding Channels}" SelectedItem="{Binding Channel}" Style="{StaticResource ModernComboBox}"/>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock Text="URL" FontSize="9" Foreground="#6C7086" Margin="0,8,0,2"/>
                            <Border Background="#252536" CornerRadius="4" Padding="8" Margin="0,0,0,8">
                                <TextBox Text="{Binding GeneratedUrl}" Foreground="#A6E3A1" Background="Transparent" BorderThickness="0" IsReadOnly="True" FontFamily="Consolas" FontSize="9" TextWrapping="Wrap"/>
                            </Border>
                            
                            <StackPanel Orientation="Horizontal">
                                <Button Content="ðŸ“‹ Copy" Command="{Binding CopyUrlCommand}" Style="{StaticResource ControlButton}" Margin="0,0,5,0"/>
                                <Button Content="â–¶ VLC" Command="{Binding TestInVlcCommand}" Style="{StaticResource ControlButton}"/>
                            </StackPanel>
                            
                            <CheckBox Content="Use manual URL" IsChecked="{Binding UseManualUrl}" Foreground="#6C7086" FontSize="10" Margin="0,10,0,0"/>
                            <TextBox Text="{Binding ManualUrl, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}" Visibility="{Binding UseManualUrl, Converter={StaticResource BoolToVisibility}}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Expander>
                    
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- SECTION 2: DRIVER STATUS -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <Expander Style="{StaticResource SectionExpander}" IsExpanded="False" Visibility="{Binding UseWindows10Mode, Converter={StaticResource BoolToVisibility}}">
                        <Expander.Header>
                            <TextBlock Text="ðŸªŸ VIRTUAL CAMERA DRIVER" Foreground="#A6E3A1" FontWeight="SemiBold" FontSize="11"/>
                        </Expander.Header>
                        <StackPanel>
                            <TextBlock Text="{Binding DriverStatus}" Foreground="#A6E3A1" FontSize="10" TextWrapping="Wrap" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="ðŸ”§ Install" Command="{Binding InstallDriverCommand}" Style="{StaticResource SuccessButton}" IsEnabled="{Binding IsInstallingDriver, Converter={StaticResource InverseBooleanConverter}}" Padding="8,6" FontSize="10" Margin="0,0,4,0"/>
                                <Button Grid.Column="1" Content="ðŸ—‘ï¸ Uninstall" Command="{Binding UninstallDriverCommand}" Style="{StaticResource DangerButton}" IsEnabled="{Binding IsInstallingDriver, Converter={StaticResource InverseBooleanConverter}}" Padding="8,6" FontSize="10" Margin="4,0,0,0"/>
                            </Grid>
                            <StackPanel Orientation="Horizontal" Visibility="{Binding IsInstallingDriver, Converter={StaticResource BoolToVisibility}}" Margin="0,8,0,0">
                                <TextBlock Text="â³ Installing..." Foreground="#F9E2AF" FontSize="10"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                    
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- SECTION 3: CAMERA CONTROLS -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <Expander Style="{StaticResource SectionExpander}" IsExpanded="True">
                        <Expander.Header>
                            <TextBlock Text="ðŸŽ® CAMERA CONTROLS" Foreground="#89B4FA" FontWeight="SemiBold" FontSize="11"/>
                        </Expander.Header>
                        <StackPanel>
                            <!-- Preview Controls -->
                            <TextBlock Text="ðŸ“º PREVIEW CONTROLS" FontSize="9" Foreground="#6C7086" FontWeight="Bold" Margin="0,0,0,8"/>
                            
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ToggleButton Grid.Column="0" Content="â†”ï¸ Flip H" IsChecked="{Binding PreviewFlipHorizontal}" Style="{StaticResource ToggleControlButton}" Margin="0,0,4,0"/>
                                <ToggleButton Grid.Column="1" Content="â†•ï¸ Flip V" IsChecked="{Binding PreviewFlipVertical}" Style="{StaticResource ToggleControlButton}" Margin="4,0,0,0"/>
                            </Grid>
                            
                            <StackPanel Margin="0,0,0,8">
                                <Grid>
                                    <TextBlock Text="â˜€ï¸ Brightness" FontSize="10" Foreground="#A6ADC8"/>
                                    <TextBlock Text="{Binding PreviewBrightness}" FontSize="10" Foreground="#89B4FA" HorizontalAlignment="Right"/>
                                </Grid>
                                <Slider Minimum="-100" Maximum="100" Value="{Binding PreviewBrightness}" Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Margin="0,0,0,15">
                                <Grid>
                                    <TextBlock Text="ðŸŽ¨ Contrast" FontSize="10" Foreground="#A6ADC8"/>
                                    <TextBlock Text="{Binding PreviewContrast}" FontSize="10" Foreground="#89B4FA" HorizontalAlignment="Right"/>
                                </Grid>
                                <Slider Minimum="-100" Maximum="100" Value="{Binding PreviewContrast}" Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <!-- Virtual Camera Controls -->
                            <TextBlock Text="ðŸ“¹ VIRTUAL CAMERA OUTPUT" FontSize="9" Foreground="#6C7086" FontWeight="Bold" Margin="0,0,0,8"/>
                            
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ToggleButton Grid.Column="0" Content="â†”ï¸ Flip H" IsChecked="{Binding VirtualFlipHorizontal}" Style="{StaticResource ToggleControlButton}" Margin="0,0,4,0"/>
                                <ToggleButton Grid.Column="1" Content="â†•ï¸ Flip V" IsChecked="{Binding VirtualFlipVertical}" Style="{StaticResource ToggleControlButton}" Margin="4,0,0,0"/>
                            </Grid>
                            
                            <StackPanel Margin="0,0,0,8">
                                <Grid>
                                    <TextBlock Text="â˜€ï¸ Brightness" FontSize="10" Foreground="#A6ADC8"/>
                                    <TextBlock Text="{Binding VirtualBrightness}" FontSize="10" Foreground="#89B4FA" HorizontalAlignment="Right"/>
                                </Grid>
                                <Slider Minimum="-100" Maximum="100" Value="{Binding VirtualBrightness}" Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Margin="0,0,0,15">
                                <Grid>
                                    <TextBlock Text="ðŸŽ¨ Contrast" FontSize="10" Foreground="#A6ADC8"/>
                                    <TextBlock Text="{Binding VirtualContrast}" FontSize="10" Foreground="#89B4FA" HorizontalAlignment="Right"/>
                                </Grid>
                                <Slider Minimum="-100" Maximum="100" Value="{Binding VirtualContrast}" Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <!-- PTZ Control -->
                            <TextBlock Text="ðŸŽ¯ PTZ CONTROL" FontSize="9" Foreground="#6C7086" FontWeight="Bold" Margin="0,0,0,8"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- First row: Up -->
                                <Button Grid.Row="0" Grid.Column="1" Content="â–²" Command="{Binding PtzUpCommand}" Style="{StaticResource PTZButton}"/>
                                
