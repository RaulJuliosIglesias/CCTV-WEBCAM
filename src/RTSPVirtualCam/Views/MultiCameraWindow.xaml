<Window x:Class="RTSPVirtualCam.Views.MultiCameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RTSPVirtualCam.ViewModels"
        xmlns:helpers="clr-namespace:RTSPVirtualCam.Helpers"
        Title="ðŸŽ¥ RTSP VirtualCam v2.0 - Multi-Camera Platform" 
        Height="800" Width="1400"
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2E">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="BgPrimary" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="BgSecondary" Color="#181825"/>
        <SolidColorBrush x:Key="BgTertiary" Color="#313244"/>
        <SolidColorBrush x:Key="BgAccent" Color="#45475A"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#CDD6F4"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#BAC2DE"/>
        <SolidColorBrush x:Key="TextMuted" Color="#6C7086"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#89B4FA"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#A6E3A1"/>
        <SolidColorBrush x:Key="AccentRed" Color="#F38BA8"/>
        <SolidColorBrush x:Key="AccentYellow" Color="#F9E2AF"/>
        
        <!-- Modern Button Styles -->
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#45475A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#89B4FA"/>
                                <Setter Property="Foreground" Value="#1E1E2E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="LayoutButton" TargetType="RadioButton">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#45475A"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#89B4FA"/>
                                <Setter Property="Foreground" Value="#1E1E2E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="CameraSlotButton" TargetType="Border">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#89B4FA"/>
            <Setter Property="Foreground" Value="#1E1E2E"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#74A7F7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#45475A"/>
                                <Setter Property="Foreground" Value="#6C7086"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#45475A"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#A6E3A1"/>
        </Style>
        
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F38BA8"/>
        </Style>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="CaretBrush" Value="#89B4FA"/>
        </Style>
        
        <Style x:Key="PTZButton" TargetType="Button">
            <Setter Property="Background" Value="#45475A"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#585B70"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#89B4FA"/>
                                <Setter Property="Foreground" Value="#1E1E2E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- TOP TOOLBAR -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="0" Background="#181825" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- App Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="ðŸŽ¥" FontSize="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="RTSP VirtualCam" FontSize="16" FontWeight="Bold" Foreground="#CDD6F4"/>
                        <TextBlock Text="v2.0 Multi-Camera Platform" FontSize="10" Foreground="#6C7086"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Layout Selection -->
                <Border Grid.Column="1" Background="#252536" CornerRadius="6" Padding="4" Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Layout:" Foreground="#6C7086" VerticalAlignment="Center" Margin="8,0,10,0"/>
                        <RadioButton x:Name="Layout1x1" Content="1Ã—1" Style="{StaticResource LayoutButton}" 
                                     GroupName="Layout" Checked="OnLayoutChanged"/>
                        <RadioButton x:Name="Layout2x2" Content="2Ã—2" Style="{StaticResource LayoutButton}" 
                                     GroupName="Layout" IsChecked="True" Checked="OnLayoutChanged"/>
                        <RadioButton x:Name="Layout3x3" Content="3Ã—3" Style="{StaticResource LayoutButton}" 
                                     GroupName="Layout" Checked="OnLayoutChanged"/>
                        <RadioButton x:Name="Layout4x4" Content="4Ã—4" Style="{StaticResource LayoutButton}" 
                                     GroupName="Layout" Checked="OnLayoutChanged"/>
                    </StackPanel>
                </Border>
                
                <!-- Camera Count Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#313244" CornerRadius="4" Padding="10,5" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¹ Connected:" Foreground="#6C7086" Margin="0,0,5,0"/>
                            <TextBlock x:Name="ConnectedCount" Text="0/4" Foreground="#A6E3A1" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#313244" CornerRadius="4" Padding="10,5" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŽ¬ Virtual:" Foreground="#6C7086" Margin="0,0,5,0"/>
                            <TextBlock x:Name="VirtualCount" Text="0" Foreground="#89B4FA" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#313244" CornerRadius="4" Padding="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âºï¸ Recording:" Foreground="#6C7086" Margin="0,0,5,0"/>
                            <TextBlock x:Name="RecordingCount" Text="0" Foreground="#F38BA8" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Global Actions -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="0,0,10,0">
                    <Button x:Name="BtnConnectAll" Content="â–¶ Connect All" Style="{StaticResource SuccessButton}" 
                            Click="OnConnectAllClick" Margin="0,0,5,0"/>
                    <Button x:Name="BtnDisconnectAll" Content="â¹ Disconnect All" Style="{StaticResource DangerButton}" 
                            Click="OnDisconnectAllClick" Margin="0,0,5,0"/>
                    <Button x:Name="BtnSnapshotAll" Content="ðŸ“¸ All" Style="{StaticResource ToolbarButton}" 
                            Click="OnSnapshotAllClick"/>
                </StackPanel>
                
                <!-- Settings -->
                <Button Grid.Column="4" Content="âš™ï¸" Style="{StaticResource ToolbarButton}" 
                        FontSize="18" Click="OnSettingsClick"/>
            </Grid>
        </Border>
        
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- MAIN CONTENT AREA -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>
            
            <!-- Camera Grid -->
            <Border Grid.Column="0" Background="#1E1E2E" Margin="10">
                <Grid x:Name="CameraGrid">
                    <!-- Will be populated dynamically based on layout -->
                </Grid>
            </Border>
            
            <!-- Right Panel - Selected Camera Controls -->
            <Border Grid.Column="1" Background="#181825" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ControlPanel">
                        
                        <!-- Selected Camera Header -->
                        <Border Background="#252536" CornerRadius="8" Padding="12" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="SELECTED CAMERA" FontSize="10" Foreground="#6C7086" FontWeight="Bold"/>
                                <TextBlock x:Name="SelectedCameraName" Text="Camera 1" FontSize="18" 
                                           Foreground="#CDD6F4" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock x:Name="SelectedCameraStatus" Text="Disconnected" FontSize="11" 
                                           Foreground="#F38BA8"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Connection Settings -->
                        <TextBlock Text="ðŸ“¡ CONNECTION" FontSize="11" Foreground="#F9E2AF" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="70"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="IP Address" FontSize="9" Foreground="#6C7086" Margin="0,0,0,3"/>
                                <TextBox x:Name="TxtIpAddress" Style="{StaticResource ModernTextBox}" Text="192.168.1.100"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Port" FontSize="9" Foreground="#6C7086" Margin="0,0,0,3"/>
                                <TextBox x:Name="TxtPort" Style="{StaticResource ModernTextBox}" Text="554"/>
                            </StackPanel>
                        </Grid>
                        
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Username" FontSize="9" Foreground="#6C7086" Margin="0,0,0,3"/>
                                <TextBox x:Name="TxtUsername" Style="{StaticResource ModernTextBox}" Text="admin"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Password" FontSize="9" Foreground="#6C7086" Margin="0,0,0,3"/>
                                <PasswordBox x:Name="TxtPassword" Background="#313244" Foreground="#CDD6F4" 
                                             BorderBrush="#45475A" Padding="10,8"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- RTSP URL -->
                        <TextBlock Text="RTSP URL" FontSize="9" Foreground="#6C7086" Margin="0,0,0,3"/>
                        <TextBox x:Name="TxtRtspUrl" Style="{StaticResource ModernTextBox}" 
                                 Text="rtsp://admin:password@192.168.1.100:554/Streaming/Channels/101"
                                 TextWrapping="Wrap" Margin="0,0,0,10"/>
                        
                        <!-- Connect/Disconnect Buttons -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="BtnConnect" Grid.Column="0" Content="â–¶ Connect" 
                                    Style="{StaticResource SuccessButton}" Click="OnConnectClick" Margin="0,0,5,0"/>
                            <Button x:Name="BtnDisconnect" Grid.Column="1" Content="â¹ Disconnect" 
                                    Style="{StaticResource DangerButton}" Click="OnDisconnectClick"/>
                        </Grid>
                        
                        <!-- Virtual Camera & Recording -->
                        <TextBlock Text="ðŸŽ¬ OUTPUT" FontSize="11" Foreground="#F9E2AF" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="BtnVirtualize" Grid.Column="0" Content="ðŸ“¹ Virtualize" 
                                    Style="{StaticResource PrimaryButton}" Click="OnVirtualizeClick" Margin="0,0,5,0"/>
                            <Button x:Name="BtnStopVirtual" Grid.Column="1" Content="â¹ Stop Virtual" 
                                    Style="{StaticResource SecondaryButton}" Click="OnStopVirtualClick"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="BtnRecord" Grid.Column="0" Content="âºï¸ Record" 
                                    Style="{StaticResource DangerButton}" Click="OnRecordClick" Margin="0,0,5,0"/>
                            <Button x:Name="BtnSnapshot" Grid.Column="1" Content="ðŸ“¸ Snapshot" 
                                    Style="{StaticResource SecondaryButton}" Click="OnSnapshotClick"/>
                        </Grid>
                        
                        <!-- PTZ Controls -->
                        <TextBlock Text="ðŸŽ® PTZ CONTROL" FontSize="11" Foreground="#F9E2AF" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <Grid HorizontalAlignment="Center" Margin="0,0,0,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Row="0" Grid.Column="1" Content="â–²" Style="{StaticResource PTZButton}"
                                    PreviewMouseLeftButtonDown="OnPtzUp" PreviewMouseLeftButtonUp="OnPtzStop"/>
                            <Button Grid.Row="1" Grid.Column="0" Content="â—€" Style="{StaticResource PTZButton}"
                                    PreviewMouseLeftButtonDown="OnPtzLeft" PreviewMouseLeftButtonUp="OnPtzStop"/>
                            <Button Grid.Row="1" Grid.Column="1" Content="â¹" Style="{StaticResource PTZButton}"
                                    Click="OnPtzStopClick"/>
                            <Button Grid.Row="1" Grid.Column="2" Content="â–¶" Style="{StaticResource PTZButton}"
                                    PreviewMouseLeftButtonDown="OnPtzRight" PreviewMouseLeftButtonUp="OnPtzStop"/>
                            <Button Grid.Row="2" Grid.Column="1" Content="â–¼" Style="{StaticResource PTZButton}"
                                    PreviewMouseLeftButtonDown="OnPtzDown" PreviewMouseLeftButtonUp="OnPtzStop"/>
                        </Grid>
                        
                        <!-- Zoom -->
                        <Grid HorizontalAlignment="Center" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="ðŸ”+" Style="{StaticResource PTZButton}" Width="60"
                                    PreviewMouseLeftButtonDown="OnZoomIn" PreviewMouseLeftButtonUp="OnPtzStop"/>
                            <Button Grid.Column="2" Content="ðŸ”âˆ’" Style="{StaticResource PTZButton}" Width="60"
                                    PreviewMouseLeftButtonDown="OnZoomOut" PreviewMouseLeftButtonUp="OnPtzStop"/>
                        </Grid>
                        
                        <!-- PTZ Speed -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="PTZ Speed" FontSize="9" Foreground="#6C7086" Margin="0,0,0,5"/>
                            <Slider x:Name="PtzSpeedSlider" Minimum="1" Maximum="100" Value="50" 
                                    Foreground="#89B4FA"/>
                        </StackPanel>
                        
                        <!-- Presets -->
                        <TextBlock Text="ðŸ“ PRESETS" FontSize="11" Foreground="#F9E2AF" FontWeight="Bold" Margin="0,0,0,10"/>
                        <WrapPanel Margin="0,0,0,15">
                            <Button Content="1" Style="{StaticResource ToolbarButton}" Width="40" Click="OnPreset1"/>
                            <Button Content="2" Style="{StaticResource ToolbarButton}" Width="40" Click="OnPreset2"/>
                            <Button Content="3" Style="{StaticResource ToolbarButton}" Width="40" Click="OnPreset3"/>
                            <Button Content="4" Style="{StaticResource ToolbarButton}" Width="40" Click="OnPreset4"/>
                            <Button Content="5" Style="{StaticResource ToolbarButton}" Width="40" Click="OnPreset5"/>
                            <Button Content="6" Style="{StaticResource ToolbarButton}" Width="40" Click="OnPreset6"/>
                        </WrapPanel>
                        
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- BOTTOM STATUS BAR -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="2" Background="#181825" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusText" Grid.Column="0" Text="Ready" Foreground="#6C7086" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="HwAccelStatus" Text="GPU: --" Foreground="#6C7086" Margin="0,0,20,0" VerticalAlignment="Center"/>
                    <TextBlock Text="API:" Foreground="#6C7086" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="ApiStatus" Text="Off" Foreground="#F38BA8" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
